<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS</title>
   
        <!--site css-->
        <link rel="stylesheet" href="~/css/site.css">
        <link rel="stylesheet" href="~/css/layout.css">
        <link rel="icon" href="~/favicon.ico">
    <link href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
            rel="stylesheet" type="text/css">
        <!--Quasar-->
        <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons" rel="stylesheet"
            type="text/css">
        <link href="https://cdn.jsdelivr.net/npm/quasar@2.11.2/dist/quasar.css" rel="stylesheet" type="text/css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Lao:wght@100..900&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


</head>
<body style="background-color: rgb(255, 255, 255);">


        <div id="app1">

            <div class="toolbar">
            <span class="menu-icon" onclick="toggleNav()">&#9776;</span>
            <div class="logo">
                <img src="~/static-images/99Th_white.png" style="width: 50px;"/>
                <span>3L Sport Football </span>
            </div>
                <div class="user-info">
        <span>@User.Identity.Name</span>
    
    @if (User.IsInRole("manager"))
    {
        <i class="fa-solid fa-user-tie fa-2x"></i>
    }
    else if (User.IsInRole("admin"))
    {
        <i class="fa-solid fa-user-gear fa-2x"></i>
    }
    else
    {
        <i class="fa-solid fa-user-group fa-2x"></i>
    }
            
                </div>
            </div>

            <div id="mySidenav" class="sidenav" >
@if (User.IsInRole("manager") || User.IsInRole("admin"))
{

                <a id="dashboard" href="/dashboard" style="margin-top: 35px;"><i class="fa fa-dashboard" aria-hidden="true"></i>ໜ້າແລກ</a> 
                                    <hr>

}
                <a id="cart" href="/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i>ກະຕ່າ</a> 
                <a id="orderHistory" href="/orderHistory" ><i class="fa fa-history" aria-hidden="true"></i>ປະຫວັດການຂາຍ</a>
                <hr> 
                <a id="inventory" href="/inventory" ><i class="fa fa-archive" aria-hidden="true"></i></i>ສະຕ໋ອກສິນຄ້າ</a>
                            <hr> 

@if (User.IsInRole("manager") || User.IsInRole("admin"))
{
                <a id="staff" href="/staff"><i class="fa fa-users" aria-hidden="true"></i>ພະນັກງານ</a>
                                    <hr>

}
        

                @if (User.IsInRole("manager"))
                {
                    <a id="report" href="/report" ><i class="fas fa-chart-bar"></i> ລາຍງານສະລຸບ</a>
                      <hr>
                }

                <a href="/security/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a>

                <a id="testing" href="/testing"><i class="fa-brands fa-dev"></i>TESTING</a>

            </div>

            <div id="main" style="margin-top: 50px; padding: 18px 12px;">
                    @RenderBody()
            </div>
        </div>

        <!--site js-->
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/layout.js"></script>
        <!--quasar cdn-->
        <!-- Add the following at the end of your body tag -->
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/quasar@2.11.2/dist/quasar.umd.js"></script>

        <!-- chart js -->
        @* <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> *@
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.1/xlsx.full.min.js"></script> 



        @RenderSection("code", required: false)
        



</body>

</html>
